{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "cds watch",
      "command": "cds",
      "args": [
        "watch"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "cds serve",
      "command": "cds",
      "args": [
        "serve",
        "--with-mocks",
        "--in-memory?"
      ],
      "problemMatcher": []
    },
    {
      "label": "kill-cds-processes",
      "type": "shell",
      "command": "pids=$(ps aux | grep -vE 'grep|bash' | grep 'cds.js' | awk '{print $2}'); if [ -n \"$pids\" ]; then kill $pids; fi",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "npm-install",
      "type": "process",
      "command": "npm",
      "args": [
        "install"
      ],
      "dependsOn": [
        "kill-cds-processes"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "BuildMDK",
      "type": "shell",
      "command": "if npm list @sap/mdk-tools --depth=0 > /dev/null 2>&1; then npx mdk build --target module --ui5 --recursive;fi",
      "dependsOn": [
        "npm-install"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "dev-project-cap",
      "type": "process",
      "command": "npx",
      "args": [
        "node",
        "-e",
        "console.log(\"prelaunch task returns OK\")"
      ],
      "dependsOn": [
        "npm-install"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "install-app-router",
      "type": "shell",
      "command": "if [ ! -d node_modules ]; then npm i; fi",
      "options": {
        "cwd": "${workspaceFolder}/local-router"
      }
    },
    {
      "label": "start-app-router",
      "type": "shell",
      "command": "eval $(cat ../env/.envXsuaa)  npm start",
      "options": {
        "cwd": "${workspaceFolder}/local-router"
      },
      "dependsOn": [
        "install-app-router"
      ],
      "isBackground": true,
      "problemMatcher": [
        {
          "severity": "info",
          "pattern": [
            {
              "regexp": ".*Application router is listening on port.*",
              "file": 0,
              "location": 0,
              "message": 0
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": ".*Application router is listening on port.*"
          }
        }
      ]
    },
    {
      "label": "stop-app-router",
      "type": "shell",
      "command": "kill $(ps aux | grep -vE 'grep|bash' | grep 'approuter' | awk '{print $2}')",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "DeployToHANADB:.env1",
      "type": "shell",
      "command": "eval $(cat ${workspaceFolder}/env/.env1) cds deploy --to hana --auto-undeploy",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "update-xsuaa-service",
      "type": "process",
      "command": "npx",
      "args": [
        "dev-cap-tools",
        "update-xsuaa-service"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "PreLaunchTask for Run zcapmedia",
      "type": "process",
      "command": "npx",
      "args": [
        "node",
        "-e",
        "console.log(\"prelaunch task returns OK\")"
      ],
      "dependsOn": [
        "npm-install",
        "start-app-router",
        "update-xsuaa-service"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}